<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/colorApplicationDefaultBackground</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:background">@color/colorApplicationDefaultBackground</item>
        <item name="colorPrimary">@color/colorApplicationDefaultBackground</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:statusBarColor">@color/colorApplicationDefaultBackground</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">#FFFFFF</item>
        <item name="colorPrimary">#000000</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="android:textColorPrimary">@color/colorKakao</item>
        <item name="android:textColorSecondary">@color/colorKakao</item>
        <item name="android:background">@color/colorApplicationDefaultBackground</item>
        <item name="titleTextAppearance">@style/TextAppearance.AppCompat.Widget.ActionBar.Title</item>
        <item name="searchIcon">@null</item>
        <item name="queryBackground">@color/colorWhite</item>
        <item name="searchHintIcon">@null</item>
        <item name="android:textColorHint">@color/colorKakao</item>
        <item name="queryHint">@string/search_hint</item>
    </style>

    <string name="search_hint">InputSearchWord</string>
</resources>
